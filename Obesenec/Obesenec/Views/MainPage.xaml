                Grid.Row="0"
                Grid.Column="2"   
                HorizontalOptions="Center"
                WidthRequest="40" 
                HeightRequest="40" 
                BorderRadius="10"
                Text="C"
                Command="{Binding CharacterPressedCommand}"
                CommandParameter="C"
                TextColor="White"   
                BackgroundColor="#1E1E1E"
                Margin="3"    
                />
