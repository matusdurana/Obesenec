<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Obesenec.ViewModels"
             mc:Ignorable="d"
             x:Class="Obesenec.Model.MainPage"
             BackgroundColor="#121212">
    
    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
        <Image Source= "{Binding ImageSource}"/>
        </Grid>
        <Grid Grid.Row="1" >
            <CollectionView ItemsSource="{Binding List}" 
                            ItemsLayout="HorizontalList"
                            VerticalOptions="CenterAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid  Padding="15" Margin="5, 0, 0, 5">
                            <Label HorizontalOptions="CenterAndExpand"
                                Text="{Binding Text}"
                                TextColor="White" 
                                FontAttributes="Bold"
                                FontSize="Title"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Row="0"
                Grid.Column="0"   
                HorizontalOptions="Center"
                WidthRequest="40" 
                HeightRequest="40" 
                BorderRadius="10"
                Text="A" 
                Command="{Binding CharacterPressedCommand}"
                CommandParameter="A"
                TextColor="White"   
                BackgroundColor="#1E1E1E"
                Margin="3"
                />
            <Button 
                Grid.Row="0 "
                Grid.Column="1"   
                HorizontalOptions="Center"
                WidthRequest="40" 
                HeightRequest="40" 
                BorderRadius="10"
                Text="B" 
                Command="{Binding CharacterPressedCommand}"
                CommandParameter="B"
                TextColor="White"   
                BackgroundColor="#1E1E1E"
                Margin="3"
                />
