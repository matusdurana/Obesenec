                Grid.Column="4"   
                HorizontalOptions="Center"
                WidthRequest="40" 
                HeightRequest="40" 
                BorderRadius="10"
                Text="E"
                Command="{Binding CharacterPressedCommand}"
                CommandParameter="E"
                TextColor="White"   
                BackgroundColor="#1E1E1E"
                Margin="3"    
                />
            <Button 
